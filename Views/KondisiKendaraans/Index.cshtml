@model IEnumerable<RentalKendaraan.Models.KondisiKendaraan>

@{
    ViewData["Title"] = "Kondisi Kendaraan";
}

<h1>Kondisi Kendaraan</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>

@using (Html.BeginForm("Index", "KondisiKendaraans", FormMethod.Get))
{
    <p>
        Kondisi Kendaraan: @Html.DropDownList("knds", "Pilih Kodisi")
        Cari Data: @Html.TextBox("searchString")
        <input type="submit" value="Filter" />
    </p>
}

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayName("Kondisi Kendaraan")
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.NamaKondisi)
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.IdKondisi"><i class="fa fa-marker fa-lg"></i></a> |
                    <a asp-action="Details" asp-route-id="@item.IdKondisi"><i class="fas fa-list fa-lg"></i></a> |
                    <a asp-action="Delete" asp-route-id="@item.IdKondisi"><i class="fa fa-trash fa-lg"></i></a>
                </td>
            </tr>
        }
    </tbody>
</table>
